        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SUENO"
        tools:targetApi="31">
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".ConfirmationActivity" />
        <activity android:name=".ProfileActivity" />
        <activity android:name=".MyProfileActivity" />
        <activity android:name=".HelpActivity" />
        <activity android:name=".QuestionsActivity" />
        <activity android:name=".AboutAppActivity" />
        <activity android:name=".MenuActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".StocksActivity" />
        <activity android:name=".InformationActivity" />
        <activity android:name=".CartActivity" />
        <activity android:name=".ChoiceActivity" />
        <activity android:name=".EstimationActivity" />
        <activity android:name=".LikeActivity" />
        <activity android:name=".RefineActivity" />
        <activity android:name=".WriteActivity" />
        <activity android:name=".NotificationsActivity" />
        <activity android:name=".AboutCafe" />
        <activity android:name=".TermsDelivery" />
        <activity android:name=".Bonuses" />
        <activity android:name=".MakingOrder" />
        <activity android:name=".PaymentMethodActivity" />
        <activity android:name=".NewMapActivity" />
        <activity android:name=".OrderThroughActivity" />


        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>